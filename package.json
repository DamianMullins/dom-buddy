{
  "name": "dom-buddy",
  "version": "1.0.3",
  "description": "DOM helper functions.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:DamianMullins/dom-buddy.git",
  "author": "Damian Mullins <damian.mullins@just-eat.com>",
  "license": "MIT",
  "devDependencies": {
    "@justeat/eslint-config-fozzie": "^1.2.0",
    "babel-cli": "^6.26.0",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-es2015": "^6.24.1",
    "concurrently": "^3.5.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^21.2.1"
  },
  "scripts": {
    "prepare": "concurrently -n \"lint,compile,test\" -c \"blue,yellow,green\" --kill-others-on-fail \"yarn lint\" \"yarn compile\" \"yarn run test\"",
    "lint": "eslint {src,test}/**/*.js",
    "compile": "babel -d dist src",
    "test": "jest",
    "test:cover": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "test:cover:coveralls": "cat coverage/lcov.info | coveralls"
  }
}
